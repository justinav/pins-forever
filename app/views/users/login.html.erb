<div class="form-container">
	<p class="description">
		Start a pin<br>
		diary here
	</p>
	<p><%= @error %></p>
	<%= form_tag('/login') do %>
	<div class="input-group">
		<%= label_tag 'email', nil, class: "input-group-addon" %>
		<%= email_field_tag 'email', nil, class: "form-control" %>
	</div>
	<br />
	<div class="input-group">
		<%= label_tag 'password', nil, class: "input-group-addon" %>
		<%= password_field_tag 'password', nil, class: "form-control" %>
	</div>
	<br />
	<%= submit_tag 'Login', class: "btn btn-block" %>
	<% end %>
</div>
