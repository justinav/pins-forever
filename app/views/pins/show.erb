<div class="header">
  <h2>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h2>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
</div>
<br/>
<a href="/">
  <i class="fa fa-arrow-left"></i>
  Back to Home
</a>
