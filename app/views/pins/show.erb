<div class="pin-page">
  <h2>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h2>

  <div class="show-pin">
    <% if !@pin.image.url.nil? %>
    <img src="<%= @pin.image.url(:medium) %>">
    <% end %>

    <h4><%= "#{@pin.text}" %></h4>

    <hr/>
    <p>
      <b>Visit <%= "#{@pin.title}" %> at: </b>
      <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
    </p>
  </div>
  <br>
  <div class="form">
    <%= link_to repin_path(@pin), class: "btn", method: "post" do %>
      Repin
    <% end %>
    <%= link_to "Add New", new_pin_path, html_options = {:class => "btn"} %>
    <%= link_to "Edit Post", edit_pin_path(@pin), html_options = {:class => "btn"} %>
  </div>
  <div class="pinned-by">
    <h4>Pinned By</h4>
    <% @users.each do |user| %>
      <p class="btn"><%= user[:first_name] %> <%= user[:last_name] %></p>
    <% end %>
  </div>
  <br/>
  <a href="/">
    <i class="fa fa-arrow-left"></i>
    Back to Home
  </a>
</div>
