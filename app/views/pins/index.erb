<div class="pins">
  <% @pins.each_slice(3) do |row| %>
  <div class="row">
    <% row.each do |pin| %>
    <div class="pin-container col-md-4">
      <div class="pin">
        <div class="pin-header">
          <div class="logo-thumbnail">
            <% if !pin.image.url.nil? %>
            <img src="<%= pin.image.url(:medium) %>">
            <% elsif "#{pin.category.name}" == "rails" %>
            <%= image_tag('rails-logo-thumbnail.png') %>
            <% elsif "#{pin.category.name}" == "ruby" %>
            <%= image_tag('ruby-logo-thumbnail.png') %>
            <% end %>
          </div>
        </div>
        <div class="pin-body">
          <h4>
            <%= link_to "#{pin.title}", pin_by_name_path(slug: pin.slug) %>
          </h4>
          <%= link_to "#{pin.url}", "#{pin.url}", html_options = {target: "_blank", class: "url"} %>
          <hr/>
          <p class="text"><%= "#{pin.text}" %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
<div class="form">
  <%= link_to "Add New", new_pin_path, html_options = {:class => "btn"} %>
</div>
